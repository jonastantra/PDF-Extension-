{
    "manifest_version": 3,
    "name": "PDF Tools Sidebar All-in-One",
    "version": "1.0.0",
    "description": "Suite completa de herramientas PDF locales: Convertir, Unir, Dividir y m√°s.",
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "side_panel": {
        "default_path": "ui/sidebar.html"
    },
    "background": {
        "service_worker": "core/background.js"
    },
    "action": {
        "default_title": "Abrir Herramientas PDF"
    },
    "permissions": [
        "sidePanel",
        "storage",
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "libs/*",
                "modules/*",
                "utils/*",
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}